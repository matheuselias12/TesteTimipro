@model IEnumerable<TimproTeste.Entidade.Imovel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Imóveis</h2>

<div class="form-group" style="display:flex; justify-content:flex-end;">
    @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-success" })
</div>
<div>
    @{
        if (@TempData["Erro"] != null)
        {
            <div id="alert" class="col-sm-12">
                <div class="alert alert-danger">
                    @TempData["Erro"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Clientes1.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoDeNegocio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            Status
        </th>
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    @{
        if (item.ClienteId != null)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Clientes1.Nome)
            </td>
        }
        else
        {
            <td>
                Sem cliente
            </td>
        }
    }

    <td>
        @Html.DisplayFor(modelItem => item.TipoDeNegocio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Valor)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descricao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StatusImovel)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.ImovelId }, new { @class = "btn btn-success" })
        @Html.ActionLink("Detalhes", "Details", new { id = item.ImovelId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Excluir", "Delete", new { id = item.ImovelId }, new { @class = "btn btn-danger" })
    </td>
</tr>
    }

</table>
